{
	"manifest_version": 3,
	"name": "Universal Converter",
	"version": "0.0.1",
	"description": "Convert weight, size, length, time and more on any webpage",
	"permissions": [
		"storage",
		"activeTab",
		"scripting"
	],
	"action": {
		"default_popup": "index.html",
		"default_icon": {
			"16": "icon16.png",
			"48": "icon48.png",
			"128": "icon128.png"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content/contentScript.js"
			]
		}
	],
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}